<h2>All Moves:</h2>

<button><a href="/logout" style="text-decoration: none;">Log Out</a></button><br><br><br>

<ul>
<% @moves.each.with_index(1) do |move, index| %>
  <li><a href="<%= "/moves/#{move.id}" %>" style="text-decoration: none;">Move: <%= index %></a></li>
<% end %>
</ul>
<br><br>
<button><a href="/moves/new" style="text-decoration: none;">New Move</a></button><br>
<form onsubmit="confirm('Are you sure you want to delete all moves?')" action=<%= "/moves/delete" %> method="post">
    <input type="hidden" name="_method" value="delete"><br>
    <input type="submit" value= "Delete All">
</form>



